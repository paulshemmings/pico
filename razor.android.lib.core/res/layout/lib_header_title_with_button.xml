<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/header_title_with_button_layout"
    >
	<LinearLayout     
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/header_title_with_button_row">	    
	   
		<TextView   	          
			android:id="@+id/header_title_with_button_text"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:text="Main row"
			android:paddingLeft="5dp"
			/>
	
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="right">	
		    
	   	    <ImageButton
	   	         android:id="@+id/header_title_with_button_image"
	   	         android:layout_width="wrap_content"
	   	         android:layout_height="wrap_content"
	   	         android:src="@drawable/lib_small_right"/>
	   	    
		</LinearLayout>   	     
	</LinearLayout>
	<View   
    	android:id="@+id/firstDivider"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#333" 
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/> 	
</LinearLayout>	