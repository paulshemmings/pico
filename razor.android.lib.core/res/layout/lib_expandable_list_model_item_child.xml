<LinearLayout 
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/model_item_group_header_layout"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:orientation="horizontal"
   android:gravity="left"
   android:paddingTop="5pt"
   android:paddingLeft="5pt"
   android:background="@drawable/lib_orange_gradient_background"
   >    
   
   <ImageView 
      android:id="@+id/model_item_child_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"       
      android:paddingBottom="2pt"
      android:gravity="center_horizontal"
      android:paddingTop="2pt"
      android:paddingRight="2pt"
      ></ImageView>

	   <LinearLayout 
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:orientation="vertical"
	   >
	   
		<TextView
	        android:id="@+id/model_item_child_main_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="main text"
	        android:textColor="#FFF"         
			android:gravity="left"
	        android:textStyle="bold"        
	        android:textAppearance="?android:attr/textAppearanceSmall" 	
	        />
	        
		<TextView
	        android:id="@+id/model_item_child_sub_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="sub text"
	        android:textColor="#EEE"         
			android:gravity="left"    
	        android:textAppearance="?android:attr/textAppearanceSmall" 
	        android:textStyle="italic"
	        
	        />			
	        
		<include
	       android:id="@+id/model_item_child_exercise_detail"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       layout="@layout/lib_model_item_detail"	       
	        />			
					
	</LinearLayout>	
			   
</LinearLayout>